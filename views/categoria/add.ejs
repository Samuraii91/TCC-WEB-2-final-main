<!DOCTYPE html>
<html lang="pt-br">
<head>
  <meta charset="UTF-8" />
  <title>Adicionar Categoria</title>
  <link rel="stylesheet" href="/css/style.css" />
</head>
<body>
  <%- include('../cabecalho.ejs') %>

  <div class="container">
    <h2>Adicionar Categoria</h2>

    <!-- IMPORTANTE: enctype para permitir upload de imagem -->
    <form action="/categoria/add" 
          method="POST" 
          enctype="multipart/form-data" 
          class="form-padrao">

      <div class="form-group">
        <label for="nome">Nome da Categoria:</label>
        <input type="text" id="nome" name="nome" required />
      </div>

      <!-- Campo da imagem -->
      <div class="form-group">
        <label for="imagem">Imagem da Categoria:</label>
        <input type="file" id="imagem" name="imagem" accept="image/*" />
      </div>

      <div class="botoes-centro">
        <button type="submit" class="btn-salvar">ðŸ’¾ Salvar</button>
      </div>
    </form>

    <div class="voltar-centro">
      <a href="/categoria/lst" class="btn-voltar">â†© Voltar</a>
    </div>
  </div>

  <%- include('../rodape.ejs') %>
</body>
</html>
